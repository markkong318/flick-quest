{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "outDir": "./lib/",
        "target": "es5",
        "sourceMap": true,
        "allowJs": true,
        "lib": [
            "es2017",
            "dom"
        ],
        "types": [
            "jest",
        ],
        "typeRoots": [
            "node_modules/@types",
        ],
        "plugins": [
            { "name": "typescript-plugin-css-modules" }
        ],
      "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*.ts",
        "node_modules/@types",
    ],
    "exclude": [
        ".git",
        "node_modules"
    ]
}
